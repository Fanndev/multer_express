<div class="text-center mt-3"><h1><strong>edit product</strong></h1></div>

<div class="card card-form mt-5 p-5">
    <div class="row">
        <div class="col">
            <form action="/update/<%= product._id %> "  method="post" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="productName" class="form-label">product Name</label>
                  <input type="text" class="form-control form-control-lg" id="productName" name="productName" required value="<%= product.productName %> " >
                </div>
                <div class="mb-3">
                  <label for="description" class="form-label">description</label>
                  <input type="text" class="form-control form-control-lg" id="description" name="description" required value="<%= product.description %> " >
                </div>
                <div class="mb-3">
                  <label for="image" class="form-label">Select image</label>
                  <input class="form-control form-control-lg" type="file" name="image">
                  <img src="/<%= product.img %>" width="100px" height="100px" class="img-thumbnail mt-1">
                </div>
                  <input type="hidden" name="old_image" id="old_image" value="<%= product.img %>">
                <button type="submit" class="btn btn-primary mt-4" >edit</button>
              </form>
        </div>
    </div>
</div>