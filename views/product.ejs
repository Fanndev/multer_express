<!-- Begin Page Content -->
<div class="container mt-4">

       
    <!-- button add category -->
    <a href="/add-product"><button type="button" class="btn btn-primary mb-5">Add product</button></a>
            
     <div>
     </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Data product</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <%- include('../messages/messages.ejs') %> 
                        <tr>
                            <th>No</th>
                            <th>Image</th>
                            <th>product Name</th>
                            <th>description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% products.forEach((product,i) => { i++ %>                        
                            <tr>
                                <th scope="row"><%= i++ %></th>
                                <td><img src="<%= product.img %>"style="width: 60px; height: 60px;"></td>
                                <td><%= product.productName %> </td>
                                <td><%= product.description %> </td>
                                <td>
                                    <a href="/edit-product/<%= product.id %>" class="btn btn-success badge">edit</a>
                                   <form action="/product/<%= product._id %>?_method=DELETE" method="post" class="d-inline">
                                       <input type="hidden" name="_id" value="<%= product._id %> ">
                                    <button class="btn btn-danger badge" type="submit" onclick="confirm('yakin?')">Delete</button>
                                   </form>
                                    
                                </td>
                            </tr>
                        <% }) %>
                   
                        
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->